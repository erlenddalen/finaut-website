@require "../../shared/stylus/includes/variables.styl"
@require "../../shared/stylus/includes/mixins.styl"

.faq
  {-section-width}
  {-section-padding}
  &-wrapper
    background $color-white
    color $color-black
  &-heading
    {-section-heading}
    margin-bottom (60/16)rem
  &-subheading
    {-section-subheading}
    padding-bottom (25/16)rem
    border-bottom $color-dark-gray 2px solid
  &-questions
    list-style none
    margin 0
    padding 0
    &-item
      border-bottom $color-dark-gray 2px solid
      &-expanded
        background $color-gray
    &-link
      display block
      color inherit
      padding (30/16)rem (60/16)rem (30/16)rem (30/16)rem
      text-decoration none
      position relative
      ../-item-expanded &
        //
      &-icon
        position absolute
        right (30/16)rem
        top 50%
        transform translate(0,-50%)
        transition-duration 0.3s
        ../:hover &
          color $color-primary
        ../../-item-expanded &
          color $color-primary
          transform translate(0,-50%) rotate(180deg)
    &-response
      display block
      color inherit
      text-decoration none
      padding 0 (30/16)rem (30/16)rem (30/16)rem
      display none
      ../-item-expanded &
        display block
  &-filter
    &-field
      display block
      box-sizing border-box
      background $color-gray
      width 100%
      padding (20/16)rem (75/16)rem (20/16)rem (30/16)rem
      line-height (20/16)rem
      border none
      margin-bottom (60/16)rem
      outline none
      transition-duration 0.5s
      &-wrapper
        position relative
    &-button
      position absolute
      top 0
      right 0
      width (75/16)rem
      height (60/16)rem
      border none
      background none
      margin 0
      padding 0
      outline none
      &-icon
        color $color-primary
        vertical-align top !important
        margin-left 0 !important

