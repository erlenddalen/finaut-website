  section.header
    a(href="index.html" style="background-image: url('images/header/logo.png')" title="Finansn√¶ringens autorisasjonsordninger").header-logo
    .header-social
      a(href="#").header-social-icon
        i.ion-social-facebook
      a(href="#").header-social-icon
