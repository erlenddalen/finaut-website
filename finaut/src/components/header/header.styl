@require "../../shared/stylus/includes/variables.styl"
@require "../../shared/stylus/includes/mixins.styl"

.header
  {-section-width}
  {-section-grid}
  padding (55/16)rem 0
  align-items center
  line-height (30/16)rem
  &-wrapper
    background $color-white
    color $color-black
  &-logo
    {-keep-ratio(300/70)}
    display block
    margin (-20/16)rem 0
    width (300/16)rem
    background-size contain
    background-position left center
    background-repeat no-repeat
  &-login
    {-section-subheading}
    {-hover-transform($color-primary)}
    padding 0 (20/16)rem
    color inherit
    text-decoration none
    white-space nowrap
    &-text
      display inline-block
    &-icon
      margin-right (5/16)rem
      transition-duration 0.3s
      color $color-black-semi
  &-language
    {-section-subheading}
    {-hover-transform($color-primary)}
    padding 0 (20/16)rem
    color inherit
    text-decoration none
    white-space nowrap
    &-icon
      margin-right (5/16)rem
      color $color-black-semi
  &-search
    &-form
      //
    &-field
      {-section-subheading}
      border none
      border-bottom $color-primary 2px solid
      padding 0 (25/16)rem 0 0
      outline none
    &-button
      width (20/16)rem
      height @width
      border none
      background none
      margin 0
      margin-left -@width
      padding 0
      vertical-align middle
      outline none
      &-icon
        color $color-black-semi
        vertical-align top !important
        margin-left 0 !important
  &-social
    white-space nowrap
    &-icon
      {-hover-transform($color-primary)}
      display inline-block
      padding (10/16)rem
      font-size (18/16)rem
      color $color-black-semi
  &-menu
    margin-left (20/16)rem
    &-icon
      display inline-block
      font-size (22/16)rem
      position relative
      background $color-gray
      transform rotate(45deg)
      width (35/16)rem
      height @width
      line-height @height
      text-align center
      color $color-black
      text-decoration underline
      i:before
        transform rotate(-45deg)

@media (max-width: $max-tablet-width)
  .header
    &-login
      padding-right 0
      &-text
        display none
      &-icon:hover
        color $color-primary

@media (max-width: $max-smartphone-height)
  .header
    height (90/16)rem
    padding 0
    &-login
    &-language
    &-social
    &-search
      display none
    &-logo
      width 75%
      max-width (300/16)rem


