@require "../../shared/stylus/includes/variables.styl"
@require "../../shared/stylus/includes/mixins.styl"

.apply
  {-section-width}
  {-section-padding}
  {-section-grid}
  &-wrapper
    background $color-white
    color $color-black
    .page-apply &
      background $color-gray
  &-about
    width 50%
    box-sizing border-box
    margin-right (90/16)rem
  &-form
    width 50%
  &-heading
    {-section-heading}
    text-align left
    margin-bottom (60/16)rem
  &-description
    line-height (20/16)rem
    padding-bottom (60/16)rem
    margin-bottom (20/16)rem
    position relative
    &:after
      content ''
      position absolute
      display block
      left 0
      bottom 0
      width 30%
      border-bottom 2px $color-primary solid
  &-field
    background $color-gray
    padding (20/16)rem (30/16)rem
    line-height (20/16)rem
    box-sizing border-box
    display block
    width 100%
    border none
    margin-bottom (10/16)rem
    color inherit
    text-decoration none
    .page-apply &
      background $color-white
    &-attach
      {-section-subheading}
      margin-bottom (10/16)rem
      text-align center
      &-icon
        margin-left 0
        margin-right (10/16)rem
        color $color-primary
  &-button
    {-button}
    border none
    display block
    box-sizing border-box
    width 100%
    color $color-white
    background $color-primary

@media (max-width: $max-tablet-width)
  .apply
    //

@media (max-width: $max-smartphone-height)
  .apply
    display block
    &-about
      width 100%
    &-form
      width 100%

@media (max-width: $max-smartphone-width)
  .apply
    //
