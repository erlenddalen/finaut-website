@require "../../shared/stylus/includes/variables.styl"
@require "../../shared/stylus/includes/mixins.styl"

.members
  {-section-width}
  {-section-padding}
  &-wrapper
    background $color-white
    color $color-black
  &-heading
    {-section-heading}
    margin-bottom (60/16)rem
  &-grid
    {-section-grid}
    flex-wrap wrap
    margin-bottom (70/16)rem
    &-item
      display block
      width 25%
      box-sizing border-box
      color $color-black
      text-decoration none
      position relative
      overflow hidden
      &:before
        content ''
        position absolute
        left (10/16)rem
        right (10/16)rem
        top 0
        border-top 2px $color-dark-gray solid
      &:after
        content ''
        position absolute
        right 0
        top (10/16)rem
        bottom (10/16)rem
        border-right 2px $color-dark-gray solid
      &-logo
        {-keep-ratio(220/170)}
        background-position center center
        background-size contain
        background-repeat no-repeat
        margin (15/16)rem
        box-sizing border-box
      &-heading
        {-section-subheading}
        position relative
        padding-bottom (40/16)rem
        &-wrapper
          padding (25/16)rem
          background alpha($color-white, 0.9)
          position absolute
          left 0
          right 0
          top 100%
          height 100%
          transition-duration 0.3s
          box-sizing border-box
          &:after
            content ''
            position absolute
            bottom (25/16)rem
            left (25/16)rem
            width 30%
            transition-duration 0.3s
            border-bottom 2px $color-primary solid
          ../../:hover &
            top 2px
            bottom 0
      &-description
        display none
  &-filter
    &-field
      display block
      box-sizing border-box
      background $color-gray
      width 100%
      padding (20/16)rem (75/16)rem (20/16)rem (30/16)rem
      line-height (20/16)rem
      border none
      margin-bottom (60/16)rem
      outline none
      transition-duration 0.5s
      &-wrapper
        position relative
    &-button
      position absolute
      top 0
      right 0
      width (75/16)rem
      height (60/16)rem
      border none
      background none
      margin 0
      padding 0
      outline none
      &-icon
        color $color-primary
        vertical-align top !important
        margin-left 0 !important
  &-footer
    text-align center
    &-button
      {-button}
      &-icon
        color $color-primary
        padding-left (5/16)rem

@media (min-width: $max-tablet-width)
  .members
    &-grid
      &-item
        &:nth-child(1):before
        &:nth-child(2):before
        &:nth-child(3):before
        &:nth-child(4):before
          border-top none
        &:nth-child(4n):after
          border none


@media (max-width: $max-tablet-width)
  .members
    //

@media (max-width: $max-smartphone-height)
  .members
    &-grid
      &-item
        width 50%
        &:nth-child(1):before
        &:nth-child(2):before
          border-top none
        &:nth-child(2n):after
          border none
    &-footer
      &-button
        display block
        width 100%

@media (max-width: $max-smartphone-width)
  .members
    //
