@require "../../shared/stylus/includes/variables.styl"
@require "../../shared/stylus/includes/mixins.styl"

.team
  {-section-width}
  {-section-padding}
  &-wrapper
    background $color-gray
  &-heading
    {-section-heading}
    margin-bottom (60/16)rem
  &-filter
    &-field
      display block
      box-sizing border-box
      background $color-white
      width 100%
      padding (20/16)rem (75/16)rem (20/16)rem (30/16)rem
      line-height (20/16)rem
      border none
      margin-bottom (60/16)rem
      outline none
      transition-duration 0.5s
      &-wrapper
        position relative
    &-button
      position absolute
      top 0
      right 0
      width (75/16)rem
      height (60/16)rem
      border none
      background none
      margin 0
      padding 0
      outline none
      &-icon
        color $color-primary
        vertical-align top !important
        margin-left 0 !important
  &-grid
    {-section-grid}
    position relative
    margin-bottom (60/16)rem
    &-item
      width 33.3333%
      padding-bottom (20/16)rem
      position relative
      &-name
        font-size (20/16)rem
        margin-bottom (15/16)rem
      &-position
        {-section-subheading}
        margin-bottom (15/16)rem
      &-illustration
        {-keep-ratio(315/390)}
        background-size cover
        background-position center center
        background-repeat no-repeat
        margin-bottom (30/16)rem
      &-intro
        display none
      &:after
        content ''
        position absolute
        bottom 0
        left 0
        border-bottom 2px $color-primary solid
        width 30%
  &-navigation
    text-align center
    &-item
      display inline-block
      width (20/16)rem
      height @width
      position relative
      &:after
        content ''
        display block
        position absolute
        left 50%
        top 50%
        width (5/16)rem
        height @width
        transform translate(-50%, -50%) rotate(45deg)
        background $color-black-semi
      &-active:after
        background $color-primary
  &-navigation
    &-left
    &-right
      position absolute
      top 40%
      transform translate(0,-50%)
      color $color-black-semi
      font-size (25/16)rem !important
      margin-left 0 !important
    &-left
      left -(40/16)rem
    &-right
      right -(40/16)rem
  &-footer
    display none
    text-align center
    &-button
      {-button}
      background $color-white
      display block
      width 100%
      &-icon
        color $color-primary
        padding-left (5/16)rem

@media (max-width: $max-tablet-width)
  .team
    //

@media (max-width: $max-smartphone-height)
  .team
    &-grid
      flex-direction column
      &-item
        width 100%
        margin-bottom (40/16)rem
    &-navigation
      display none
      &-left
      &-right
        display none !important
    &-footer
      display block


